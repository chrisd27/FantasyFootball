extends ../layout
include ../_includes/sharedHTMLfunctions

block content
  form(name="addPlayer", method="post")
    .form-group.row
      label(for="player-first-name").col-xs-12.col-md-3 First name
      .col-xs-12.col-md-6
        input(type="text").form-control#player-first-name
    .form-group.row
      label(for="player-last-name").col-xs-12.col-md-3 Surname
      .col-xs-12.col-md-6
        input(type="text").form-control#player-last-name
    .form-group.row
      label(for="player-nickname").col-xs-12.col-md-3 Nickname
      .col-xs-12.col-md-6
        input(type="text").form-control#player-nickname
    .form-group.row
      label(for="player-preferred-pos").col-xs-12.col-md-3 Preferred position
      .col-xs-12.col-md-6
        select.form-control#player-preferred-pos
          each position, i in positions
            option(value=i) #{position}
    .form-group.row
      .col-xs-12.col-md-2
        input(type="submit").form-control#submit-new-player
