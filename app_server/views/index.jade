extends layout
include _includes/sharedHTMLfunctions

block content
  #banner.page-header
    .row
      h1= title
       small &nbsp; A summary of #{teamName}'s fantasy points!
  .row-fluid
    .col-xs-12.col-sm-6.col-md-4.inline
      p Fantasy Points Table
    //-  +summaryTable2Col(players, ['Player name', 'Fantasy points'], 'fantasy')
    .col-xs-12.col-sm-6.col-md-4.inline
      p Fantasy Goals Table
    //-  +summaryTable2Col(players, ['Player name', 'Goals'], 'goals')
    .col-xs-12.col-sm-6.col-md-4.inline
      p Fantasy Assists Table
    //-  +summaryTable2Col(players, ['Player name', 'Assists'], 'assists')
  .row-fluid
    .col-xs-12
    p Recent Games
    each game in games
      p= game.opposition
      p= game.oppositionScore
      p= game.accountTeamScore
      p= game.date
    p Recent Players
      p= players
    p Recent Rules
      p= rules
